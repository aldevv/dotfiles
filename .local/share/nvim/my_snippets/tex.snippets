snippet ssa "subject to" iA
% import amsmath
% usepackage{amsmath}
\begin{cases}
	${1:0}, & ${2:\text{if}\ a=1 \\}
	${3:1}, & ${3:\text{otherwise}}
\end{cases}
endsnippet

snippet /// "Fraction" iA
\\frac{$1}{$2}$0
endsnippet
# for fractions
snippet '((\d+)|(\d*)(\\)?([A-Za-z]+)((\^|_)(\{\d+\}|\d))*)//' "Fraction" wrA
\\frac{`!p snip.rv = match.group(1)`}{$1}$0
endsnippet

snippet ssA "Description" iA
%\usepackage{empheq}
\begin{empheq}[left={$1=\empheqlbrace}\]{alignat*=7}
	$2
    %example:
    % - 0,1&X_{1} &- 0,1&X_{2} &- 0,1&X_{3} &+ 0,9&X_{4} &- 0,1&X_{5}& &<= 0 \\
    % &X_{1} &+ &X_{2} &+ &X_{3} &+ &X_{4} &+ &X_{5}& &<= 2\,000\,000 \\
\end{empheq}


endsnippet

snippet sssu "Description" bA
\subsubsection{$1}\label{subsec:$2}
endsnippet

snippet ggR "images in Latex" bA
\usepackage{graphicx}
\graphicspath{{./imagenes/}}
endsnippet

snippet ggr "Description" bA
\begin{figure}[h]
	\includegraphics[width=\textwidth]{$1}
\end{figure}

endsnippet

