snippet _skel "start latex file" b
\documentclass{article}
%\documentclass[titlepage]{article}
\usepackage[spanish]{babel}
\usepackage[hidelinks]{hyperref}
% how many levels to show in table of contents
\setcounter{tocdepth}{1}
% for dark links
\usepackage{xcolor}
\hypersetup{colorlinks, linkcolor={red!50!black}, citecolor={blue!50!black}, urlcolor={blue!80!black}}
\title{\textbf{${1:title}}}
\author{Juan Alejandro Bernal}
\begin{document}
\maketitle

${2:body}


%\bibliographystyle{ieeetr}
%\bibliography{mybib.bib}
\end{document}

endsnippet

snippet iit "create item" bA
\item $1
endsnippet

snippet sse "create section" bA
\section{$1}\label{sec:$2}
endsnippet

snippet ssu "create subsection" bA
\subsection{$1}\label{subsec:$2}
endsnippet

snippet bbg "begin{} / end{}" bA
\begin{$1}
	$0
\end{$1}
endsnippet

snippet today "Date using bash"
`date +%F`
endsnippet

snippet box "Box"
`!p snip.rv = '┌' + '─' * (len(t[1]) + 2) + '┐'`
│ $1 │
`!p snip.rv = '└' + '─' * (len(t[1]) + 2) + '┘'`
$0
endsnippet

snippet mmm "Math" wA
$${1}$`!p
if t[2] and t[2][0] not in [',', '.', '?', '-', ' ']:
    snip.rv = ' '
else:
    snip.rv = ''
`$2
endsnippet

# this is the same as $$ but can be in its own line
snippet mmM "Math" wA
\[
$1
\] $0
endsnippet

# this aligns equations by the & symbol
snippet mma "Math" wA
% import amsmath
% usepackage{amsmath}
% the * toggles equation numbering
\begin{align*}
	${1:something & something} \\
	${2:something & something}
\end{align*}
endsnippet

# this aligns equations by centering
snippet mmg "Math" wA
% import amsmath
% usepackage{amsmath}
% the * toggles equation numbering
\begin{gather*}
	${1:0} \\
	${2:1}
\end{gather*}
endsnippet

snippet ssm "Math sum" iA
\sum_{$1}^{$2}
endsnippet

snippet inn "Math integral" iA
\int_{$1}^{$2}
endsnippet

snippet ssq "^2" iA
^2
endsnippet

snippet ccb "^3" iA
^3
endsnippet

snippet ppw "superscript" iA
^{$1}$0
endsnippet

snippet ssb "superscript" iA
_{$1}$0
endsnippet

snippet uurl "url bibliography" b
@article{$1,
author = {},
title = {{}},
url = {$2},
year = {}
}
endsnippet

snippet bbib "biblatex" b
